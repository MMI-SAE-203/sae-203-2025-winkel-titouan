---
const { name, description, date, affiche, duree } = Astro.props;

const pocketBaseUrl = "https://sae203.titouan-winkel.fr"; // Remplace par ton URL PocketBase
const collectionName = "films"; // Nom de ta collection
---

<section>
    {
        affiche ? (
            <img
                src={`${pocketBaseUrl}/api/files/${collectionName}/${affiche}`}
                alt={name}
                width="300"
            />
        ) : null
    }
</section>

<div class="bg-white shadow-md rounded-lg p-4 border border-gray-200">
    <h2 class="text-lg font-bold text-gray-900 mt-4">{name}</h2>
    <p class="text-gray-700 mt-2">{description}</p>
    <p class="text-sm text-gray-500 mt-2">{date}</p>
    <p class="text-sm text-gray-500 mt-2">{duree}</p>
</div>
