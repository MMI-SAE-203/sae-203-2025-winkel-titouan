---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <section class="container mx-auto py-12">
        <h1 class="text-4xl font-bold text-center mb-8">
            Programmation du Festival
        </h1>
        <p class="text-center text-lg text-gray-600 mb-12">
            Du 9 au 10 août 2025
        </p>

        <div class="grid md:grid-cols-2 gap-12">
            <!-- Jour 1 -->
            <div>
                <h2 class="text-2xl font-semibold mb-4">
                    Jour 1 - 9 août 2025
                </h2>
                <ul class="space-y-4">
                    <li class="bg-gray-100 p-4 rounded-lg shadow">
                        <span class="font-bold">10h00</span> - Exposition interactive
                    </li>
                    <li class="bg-gray-100 p-4 rounded-lg shadow">
                        <span class="font-bold">12h00</span> - Projection de court-métrages
                    </li>
                    <li class="bg-gray-100 p-4 rounded-lg shadow">
                        <span class="font-bold">14h00</span> - Battle de pitch
                    </li>
                    <li class="bg-gray-100 p-4 rounded-lg shadow">
                        <span class="font-bold">16h00</span> - Projection de court-métrages
                    </li>
                    <li class="bg-gray-100 p-4 rounded-lg shadow">
                        <span class="font-bold">18h00</span> - Photobooth thématique
                    </li>
                    <li class="bg-gray-100 p-4 rounded-lg shadow">
                        <span class="font-bold">20h00</span> - Projection de court-métrages
                    </li>
                </ul>
            </div>

            <!-- Jour 2 -->
            <div>
                <h2 class="text-2xl font-semibold mb-4">
                    Jour 2 - 10 août 2025
                </h2>
                <ul class="space-y-4">
                    <li class="bg-gray-100 p-4 rounded-lg shadow">
                        <span class="font-bold">10h00</span> - Rencontre avec les
                        réalisateurs
                    </li>
                    <li class="bg-gray-100 p-4 rounded-lg shadow">
                        <span class="font-bold">12h00</span> - Projection de court-métrages
                    </li>
                    <li class="bg-gray-100 p-4 rounded-lg shadow">
                        <span class="font-bold">14h00</span> - Ateliers d'écriture
                        de scénario
                    </li>
                    <li class="bg-gray-100 p-4 rounded-lg shadow">
                        <span class="font-bold">16h00</span> - Projection de court-métrages
                    </li>
                    <li class="bg-gray-100 p-4 rounded-lg shadow">
                        <span class="font-bold">18h00</span> - Projection de courts
                        métrages de réalisateurs locaux
                    </li>
                    <li class="bg-gray-100 p-4 rounded-lg shadow">
                        <span class="font-bold">20h00</span> - Exposition interactive
                    </li>
                </ul>
            </div>
        </div>
    </section>
</Layout>
