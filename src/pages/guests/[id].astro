---
import Layout from "../../layouts/Layout.astro";
import { oneInvite } from "../../js/backend.mjs";

const { id } = Astro.params;
const invite = await oneInvite(id);

if (!invite) {
    throw new Error("Film non trouvé");
}
---

<Layout>
    <div class="max-w-4xl mx-auto p-6 bg-white shadow-md rounded-lg">
        <h1 class="text-3xl font-bold text-gray-900 mb-4">
            Détails de l'invité
        </h1>
        <div class="mt-4">
            <h2 class="text-2xl font-semibold text-blue-600">
                {invite.titre}
            </h2>
            <img
                src={invite.photo}
                alt={`${invite.nom}`}
                class="w-full mt-4 mb-4"
            />
            <p class="mt-2 text-lg text-gray-700">{invite.biographie}</p>
        </div>
        <a
            href="/guests"
            class="mt-6 inline-block text-blue-500 hover:text-blue-700 underline"
        >
            Retour à la liste des invités
        </a>
    </div>
</Layout>
