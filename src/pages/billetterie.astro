---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <section class="container mx-auto py-12 text-center">
        <h1 class="text-4xl font-bold mb-8">Billetterie</h1>
        <p class="text-lg text-gray-600 mb-6">
            Réservez vos places pour le festival du 9 au 10 août 2025
        </p>

        <div class="flex flex-col md:flex-row justify-center gap-8">
            <div class="bg-gray-100 p-6 rounded-lg shadow-lg w-64">
                <h2 class="text-2xl font-semibold mb-4">Tarif Normal</h2>
                <p class="text-lg text-gray-700 mb-4">40€</p>
                <button
                    class="bg-blue-600 text-white px-6 py-2 rounded-lg cursor-not-allowed opacity-50"
                    >Acheter</button
                >
            </div>

            <div class="bg-gray-100 p-6 rounded-lg shadow-lg w-64">
                <h2 class="text-2xl font-semibold mb-4">Tarif Étudiant</h2>
                <p class="text-lg text-gray-700 mb-4">20€</p>
                <button
                    class="bg-blue-600 text-white px-6 py-2 rounded-lg cursor-not-allowed opacity-50"
                    >Acheter</button
                >
            </div>
        </div>
    </section>
</Layout>
