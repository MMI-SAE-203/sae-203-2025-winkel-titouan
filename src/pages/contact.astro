---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <main class="max-w-2xl mx-auto p-6 bg-white shadow-lg rounded-lg mt-10">
        <h1 class="text-3xl font-bold text-center text-gray-800 mb-4">
            Contact
        </h1>
        <h2 class="text-xl text-center text-gray-600 mb-6">
            Formulaire de contact
        </h2>

        <form
            action="mailto:contact@cinéflash25.fr"
            method="post"
            enctype="text/plain"
            class="space-y-4"
        >
            <div>
                <label for="nom" class="block text-gray-700 font-medium"
                    >Nom :</label
                >
                <input
                    type="text"
                    id="nom"
                    name="nom"
                    required
                    class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2"
                />
            </div>

            <div>
                <label for="prenom" class="block text-gray-700 font-medium"
                    >Prénom :</label
                >
                <input
                    type="text"
                    id="prenom"
                    name="prenom"
                    required
                    class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2"
                />
            </div>

            <div>
                <label for="email" class="block text-gray-700 font-medium"
                    >Email :</label
                >
                <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2"
                />
            </div>

            <div>
                <label for="message" class="block text-gray-700 font-medium"
                    >Message :</label
                >
                <textarea
                    id="message"
                    name="message"
                    required
                    class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 h-32"
                ></textarea>
            </div>

            <div class="text-center">
                <input
                    type="submit"
                    value="Envoyer"
                    class="bg-[#16D683] text-white px-6 py-2 rounded-lg"
                />
            </div>
        </form>
    </main>
</Layout>
